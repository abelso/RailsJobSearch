<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title, 'Naziv posla' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :description, 'Opis posla' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :name, 'Ime poslodavca' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :email, 'Email poslodavca' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :category, 'Kategorija posla' %>
    <%= form.text_field :category, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :deadline, 'Rok prijave' %><br>
    <%= form.date_select :deadline, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Spremi posao", class: 'btn btn-success' %>
  </div>
<% end %>
