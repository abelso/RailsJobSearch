<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div class="card container mb-4 mt-4">
      <div class="card-body">
        <h5 class="card-title">Kreiranje posla ima <%= job.errors.count %> gre≈°aka</h5>
        <div class="alert alert-danger" role="alert">
          <% job.errors.values.each do |message| %>
            <p><%= message.join(' ') %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title, 'Naziv posla' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :description, 'Opis posla' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :name, 'Ime poslodavca' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :email, 'Email poslodavca' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :category, 'Kategorija posla' %>
    <%= form.text_field :category, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :deadline, 'Rok prijave' %><br>
    <%= form.date_field :deadline, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "Spremi posao", class: 'btn btn-success' %>
  </div>
<% end %>
