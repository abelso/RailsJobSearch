<h2>Prijava za posao</h2>
<%= form_for([@job, @application]) do |form| %>
  <% if application.errors.any? %>
    <div class="card container mb-4 mt-4">
      <div class="card-body">
        <h5 class="card-title">Vaša prijava ima <%= application.errors.count %> grešaka</h5>
        <div class="alert alert-danger" role="alert">
          <% application.errors.values.each do |message| %>
            <p><%= message.join(' ') %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name, "Ime" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :last_name, "Prezime" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :dob, "Datum rođenja" %><br>
    <%= form.date_field :dob, start_year: 1900, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :telephone, "Broj telefona" %>
    <%= form.text_field :telephone, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :address, "Adresa" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :qualification, "Stručna sprema" %>
    <%= form.select :qualification, ['VSS', 'VŠS', 'SSS', 'NK'], disabled: "", prompt: "Odaberite stručnu spremu", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :cv, "Životopis" %><br>
    <%= form.file_field :cv, accept: "application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document, application/pdf" %>
  </div>

  <div hidden class="field form-group">
    <%= form.label :job_id, "job_id" %>
    <%= form.text_field :job_id, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Prijava", class: 'btn btn-success' %>
  </div>
<% end %>
