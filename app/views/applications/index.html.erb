<p id="notice"><%= notice %></p>

<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Address</th>
      <th>Qualification</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.first_name %></td>
        <td><%= application.last_name %></td>
        <td><%= application.dob %></td>
        <td><%= application.email %></td>
        <td><%= application.telephone %></td>
        <td><%= application.address %></td>
        <td><%= application.qualification %></td>
        <td><%= application.job_id %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Application', new_application_path %>
