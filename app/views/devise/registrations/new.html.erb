<h2>Registracija</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :first_name, 'Ime' %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control col-lg-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, 'Prezime' %><br />
    <%= f.text_field :last_name, class: "form-control col-lg-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control col-lg-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-lg-4" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-lg-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Registracija", class: "btn btn-success" %>
  </div>
<% end %>